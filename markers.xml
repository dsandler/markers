<?xml version="1.0" encoding="UTF-8"?>
<project name="markers" default="all">
  
  
  <property file="markers.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="700m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.apk"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.ane"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.android_api_20_platform" value="${jdk.home.android_api_20_platform}/../../../Library/Java/JavaVirtualMachines/1.6.0_43-b01-447.jdk/Contents/Home/bin"/>
  <path id="jdk.classpath.android_api_20_platform">
    <fileset dir="${jdk.home.android_api_20_platform}">
      <include name="platforms/android-20/android.jar"/>
      <include name="platforms/android-20/data/res"/>
      <include name="tools/support/annotations.jar"/>
    </fileset>
  </path>
  
  <property name="jdk.bin.android_4.4_platform" value="${jdk.home.android_4.4_platform}/../../../Library/Java/JavaVirtualMachines/1.6.0_43-b01-447.jdk/Contents/Home/bin"/>
  <path id="jdk.classpath.android_4.4_platform">
    <fileset dir="${jdk.home.android_4.4_platform}">
      <include name="platforms/android-19/android.jar"/>
      <include name="platforms/android-19/data/res"/>
      <include name="tools/support/annotations.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.android_api_20,_l_preview_platform}"/>
  <property name="project.jdk.bin" value="${jdk.bin.android_api_20,_l_preview_platform}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.android_api_20,_l_preview_platform"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm4-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  <import file="${basedir}/../../../../android/projects/markers/common/module_common.xml"/>
  
  <import file="${basedir}/phone/src/main/module_phone.xml"/>
  
  <import file="${basedir}/wear/src/main/module_wear.xml"/>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.common, clean.module.phone, clean.module.wear" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.common, compile.module.phone, compile.module.wear" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>